<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:padding="10dp"
    >




        <ImageView
            android:id="@+id/imgService"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"

            android:src="@drawable/ic_product1"
            android:background="@drawable/bg_curved_card"
            android:backgroundTint="@color/white"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/imgService"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12 Per Kg"
                android:textColor="#6F35EF"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular Wash"
                android:textColor="#000000"
                android:textStyle="bold"
                />


        </LinearLayout>


        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|right"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:src="@drawable/ic_heart_stroke"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            app:tint="@android:color/darker_gray"

            />
    </LinearLayout>






</RelativeLayout>
