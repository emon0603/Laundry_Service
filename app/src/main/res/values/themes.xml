<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QWASH" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:windowIsTranslucent">true</item>


    </style>

    <style name="FlatCornersNavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="shapeAppearance">@style/FlatShapeAppearance</item>
    </style>

    <style name="FlatShapeAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>


    <style name="BottomNavTextActive">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Inactive Text Size -->
    <style name="BottomNavTextInactive">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item> <!-- টেক্সট সাইজ ছোট করা হলো -->
    </style>











</resources>